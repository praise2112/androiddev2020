<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_fragment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/day"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:gravity="start"
        android:text=""
        android:textAlignment="center"
        android:textSize="@dimen/fragment_forecast_item_text_size_left" />

    <ImageView
        android:id="@+id/weatherImg"
        android:layout_width="149dp"
        android:layout_height="45dp"
        android:contentDescription="@string/weather_image_description"
         />

    <TextView
        android:id="@+id/weatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:text=""
        android:textSize="@dimen/fragment_forecast_item_text_size_right"  />

</LinearLayout>